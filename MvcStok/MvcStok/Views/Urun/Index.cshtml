@using MvcStok.Models.Entity
@model List<tblurunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("Index", "urun", FormMethod.Get))
{ 
    <p>
     Ürün Adı:@Html.TextBox("p")
     <input type="submit"  value="Ara" />
    </p>

}
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN ADI</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
         <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.ad</td>
            <td>@x.marka</td>
            <td>@x.stok</td>
            <td>@x.alişfiyat </td>
            <td>@x.satişfiyat </td>
            <td>@x.kategori</td>
            <td><a href="/Urun/UrunSil/@x.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@x.id" class="btn btn-success">Güncelle</a></td>
        </tr>

    }
</table>
<a href="/Urun/YeniUrun/" class="btn btn-primary">Yeni Ürün Girişi</a>

